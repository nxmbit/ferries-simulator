<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToggleButton?>

<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.nxmbit.ferriessimulator.Controller">
    <children>
        <VBox minWidth="200">
            <children>
                <Button fx:id="startButton" text="Start Simulation" onAction="#startSimulation" />
                <Button fx:id="stopButton" text="Stop Simulation" onAction="#stopSimulation" />
                <Label text="Spawn Interval:" />
                <Slider fx:id="spawnIntervalSlider" min="1000" max="10000" value="5000" />
                <Button fx:id="setIntervalButton" text="Set Interval" onAction="#adjustSpawnInterval" />
                <Label text="Max Vehicles:" />
                <TextField fx:id="maxVehiclesField" promptText="Enter max vehicles" />
                <Button fx:id="setMaxVehiclesButton" text="Set Max Vehicles" onAction="#setMaxVehicles" />
                <Button fx:id="spawnVehicleButton" text="Spawn Vehicle" onAction="#spawnVehicle" />
                <ToggleButton fx:id="toggleGridButton" text="Toggle Grid" onAction="#toggleGridVisibility" />
            </children>
            <VBox.margin>
                <Insets top="0" right="20" bottom="0" left="0"/>
            </VBox.margin>
        </VBox>
        <Separator orientation="VERTICAL"/>
        <Pane fx:id="pane" minWidth="1664" minHeight="936" />
    </children>
</HBox>
